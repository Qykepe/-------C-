Console.Write("Введите первое число:");
int A = Convert.ToInt32(Console.ReadLine()!);
Console.Write("Введите второе число:");
int B = Convert.ToInt32(Console.ReadLine()!);
int C = A;
Console.WriteLine($"{A} в степени {B} равна {MyMethod(C)}");

//Метод 
int MyMethod(int C){
    for (int i = 1; i < B; i++){
    C = C * A;
    }
    return C;
}